<h3 class="sub-header">Все карточки</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Лицевая сторона</th>
    <th>Оборотная сторона</th>
    <th>Обновлено</th>
  </tr>
  </thead>
  <tbody>
  <% @card.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td width='15%'><%= card.review_date.strftime('%m/%d/%Y') %></td>
      </tr>
  <% end %>
  </tbody>
  </table>
</div>
