<h3 class="sub-header">Все карточки</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered smfont">
  <thead >
  <tr>
    <th>Лицевая сторона</th>
    <th>Оборотная сторона</th>
    <th>Обновлено</th>
    <th>Редактировать</th>
    <th>Удалить</th>
  </tr>
  </thead>
  <tbody>
  <% @card.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td width="10%"><%= card.review_date.strftime('%d/%m/%Y') %></td>
        <td width="10%"><%= link_to "редактировать", edit_card_path(card) %></td>
        <td width="10%"><%= link_to 'удалить', card_path(card),
                            method: :delete,
                            data: { confirm: 'Вы уверены?' } %></td>
      </tr>
  <% end %>
  </tbody>
  </table>
</div>
