  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
<div class="container">
  <div class="header">
    <nav>
      <ul class="nav nav-pills pull-right">
         <li role="presentation"><%= link_to "Все карточки", cards_path %></li>
        <li role="presentation"><%= link_to "Добавить карточку", '#' %></li>
      </ul>
    </nav>
      <h3><%= link_to "Флэшкарточкер", root_path, class: "logo" %></h3>
  </div>
<!-- Begin page content -->
  <div class="container">
    <%= yield %>
  </div>  
</div>
 <%= render 'layouts/footer' %>
</body>
</html>